<%= form_for(@admin_room, html: { class: 'ui form' }) do |f| %>
  <% if @admin_room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_room.errors.count, "error") %> prohibited this admin_room from being saved:</h2>

      <ul>
      <% @admin_room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label(:machine_name, 'Name (letters, numbers, or underscores)') %>
    <%= f.text_field(:machine_name) %>
  </div>

  <div class="field">
    <%= f.label(:title) %>
    <%= f.text_field(:title) %>
  </div>

  <div class="field">
    <%= f.label(:description) %>
    <%= f.text_field(:description) %>
  </div>
  
  <% f.fields_for :manifests do |m| %>
    <%= m.text_field :url %>
  <% end %>
  
  <div class="field">
    <%= f.label(:weight) %>
    <%= f.text_field(:weight) %>
  </div>

  <div class="actions">
    <%= f.submit(class: 'ui button') %>
  </div>
<% end %>

