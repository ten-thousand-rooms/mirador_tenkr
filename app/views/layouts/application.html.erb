<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta charset="utf-8">

  <title><%= @title %></title>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

  <% if defined? @is_mirador_window %>
    <%= stylesheet_link_tag 'css/mirador-combined.min' %>
  <% end %>
  <%= stylesheet_link_tag 'semantic.min' %>
  <% if defined? @is_mirador_window %>
    <%= stylesheet_link_tag 'yale-mirador.bundle' %>
  <% end %>

  <% if defined? @is_mirador_window %>
    <%= javascript_include_tag 'mirador.min' %>
    <%= javascript_include_tag 'goldenlayout.min' %>
    <%= javascript_include_tag 'yale-mirador.bundle' %>
  <% else %>
  <%= javascript_include_tag 'jquery' %>
  <% end %>

  <script>
    $.noConflict();
  </script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>

  <% if @use_analytics %>
    <%= render 'analytics' %>
  <% end %>
</head>
<body data-no-turbolink>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<%= yield %>

</body>

</html>
